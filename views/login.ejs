



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>SolarCharge | Login</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: radial-gradient(circle at top left, #ffe08a, #ffb347, #ff8c42, #0a0a0a);
            background-size: cover;
            overflow: hidden;
        }

        /* LEFT SOLAR ANIMATION */
        .left-panel {
            width: 50%;
            height: 100%;
            position: relative;
        }

        .sun {
            width: 180px;
            height: 180px;
            background: radial-gradient(circle, #fff6b0, #ffd34d, #ff9900);
            border-radius: 50%;
            position: absolute;
            top: 20%;
            left: 25%;
            box-shadow: 0 0 50px #ffcf3f, 0 0 100px #ffb300;
            animation: glow 3s infinite ease-in-out;
        }

        @keyframes glow {
            0% { transform: scale(1); box-shadow: 0 0 50px #ffcf3f; }
            50% { transform: scale(1.1); box-shadow: 0 0 80px #ffb300; }
            100% { transform: scale(1); box-shadow: 0 0 50px #ffcf3f; }
        }

        .ray {
            position: absolute;
            width: 2px;
            height: 160px;
            background: rgba(255, 230, 140, 0.7);
            top: 50%;
            left: 50%;
            transform-origin: bottom center;
            animation: rayglow 2s infinite alternate;
        }

        @keyframes rayglow {
            from { opacity: 0.4; }
            to { opacity: 1; }
        }

        /* Generate multiple rays */
        .ray:nth-child(2) { transform: translate(-50%, -100%) rotate(0deg); }
        .ray:nth-child(3) { transform: translate(-50%, -100%) rotate(30deg); }
        .ray:nth-child(4) { transform: translate(-50%, -100%) rotate(60deg); }
        .ray:nth-child(5) { transform: translate(-50%, -100%) rotate(90deg); }
        .ray:nth-child(6) { transform: translate(-50%, -100%) rotate(120deg); }
        .ray:nth-child(7) { transform: translate(-50%, -100%) rotate(150deg); }
        .ray:nth-child(8) { transform: translate(-50%, -100%) rotate(180deg); }
        .ray:nth-child(9) { transform: translate(-50%, -100%) rotate(210deg); }
        .ray:nth-child(10) { transform: translate(-50%, -100%) rotate(240deg); }
        .ray:nth-child(11) { transform: translate(-50%, -100%) rotate(270deg); }
        .ray:nth-child(12) { transform: translate(-50%, -100%) rotate(300deg); }
        .ray:nth-child(13) { transform: translate(-50%, -100%) rotate(330deg); }

        /* RIGHT LOGIN FORM CARD */
        .login-card {
            width: 400px;
            padding: 30px;
            background: rgba(255, 255, 255, 0.14);
            border-radius: 20px;
            backdrop-filter: blur(12px);
            box-shadow: 0 0 20px rgba(255, 212, 120, 0.4);
            text-align: center;
            color: white;
        }

        .login-card h2 {
            font-weight: 600;
        }

        .login-card input {
            margin-top: 15px;
            border-radius: 10px !important;
            padding: 10px;
        }

        .login-card .btn {
            margin-top: 20px;
            width: 100%;
            font-size: 16px;
            border-radius: 10px;
            background: #ffb300;
            border: none;
            color: black;
            font-weight: bold;
        }

        .footer-links a {
            color: #ffe08a;
            font-weight: bold;
        }
    </style>

    <script>
        $(document).ready(function () {
            $("#form").submit(function (event) {
                event.preventDefault();

                $.ajax({
                    type: 'POST',
                    url: '/login',
                    data: $('#form').serialize(),
                    dataType: "json",
                    success: function (response) {
                        document.getElementById("check").innerHTML = response.Success;

                        setTimeout(() => { document.getElementById("check").innerHTML = ""; }, 3000);

                        if (response.Success == "Success!") {
                            document.getElementById("aa").click();
                        }
                    }
                })
            });
        });
    </script>

</head>

<body>

    <!-- LEFT SOLAR ANIMATION -->
    <div class="left-panel">
        <div class="sun">
            <div class="ray"></div><div class="ray"></div><div class="ray"></div>
            <div class="ray"></div><div class="ray"></div><div class="ray"></div>
            <div class="ray"></div><div class="ray"></div><div class="ray"></div>
            <div class="ray"></div><div class="ray"></div><div class="ray"></div>
        </div>
    </div>

    <!-- RIGHT SIDE LOGIN FORM -->
    <div class="login-card">
        <h2>SOLAR CHARGE</h2>
        <p>Login to continue</p>

        <form id="form" method="post">
            <input type="text" name="email" placeholder="Enter Email" class="form-control" required><br>
            <input type="password" name="password" placeholder="Enter Password" class="form-control" required><br>
            <input type="submit" value="Login" class="btn">
        </form>

        <br>
        <span id="check" style="color: #ff6b6b;"></span>

        <br><br>
        <div class="footer-links">
            <p>Forgot Password? <a href="/forgetpass">Click Here</a></p>
            <p>New User? <a href="/">Register Here</a></p>
        </div>

        <a id="aa" href="/profile"></a>
    </div>

</body>
</html>

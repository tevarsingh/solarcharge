<script>
let soc = 20; // starting SOC shown in your UI

// EV + Solar system parameters
const batteryCapacityWh = 40000; // 40 kWh EV Battery
const panelArea = 4;             // m¬≤ solar panel at station
const panelEfficiency = 0.20;    // 20%

// üåû Returns sun intensity based on current hour (0‚Äì1000 W/m2)
function getSunIntensity() {
    const hour = new Date().getHours();
    const peakHour = 13; // strongest sunlight at 1PM

    if (hour >= 6 && hour <= 18) {
        const diff = Math.abs(hour - peakHour);
        return 1000 * Math.max(0, 1 - diff / 7); 
    }
    return 0; // night = no solar charging
}

// üîã Update SOC logically from solar input
function updateSOC() {
    const hour = new Date().getHours();
    const sunIntensity = getSunIntensity();

    // Solar energy produced (Watts)
    const solarPowerW = panelArea * panelEfficiency * sunIntensity;

    // Convert to percentage per simulated minute
    const chargePerMinute = (solarPowerW / batteryCapacityWh) * 100;

    // Increase SOC
    soc += chargePerMinute;

    // ‚ö†Ô∏è Apply special limit: 12PM to 5PM ‚Üí cap SOC at 80%
    if (hour >= 12 && hour < 17) {
        if (soc > 80) soc = 80;
    } else {
        // outside this period ‚Üí normal 100% allowed
        if (soc > 100) soc = 100;
    }

    // Update pie chart animation
    const pie = document.querySelector(".pie");
    pie.style.setProperty("--p", soc);
    pie.innerText = Math.round(soc) + "%";
}

// ‚è± Update every 1 second (1 sec = 1 minute simulation)
setInterval(updateSOC, 1000);
</script>


